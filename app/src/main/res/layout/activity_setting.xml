<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainColor"
    tools:context=".setting.SettingActivity">


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/myPageBtn"
        android:fontFamily="@font/font"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:textSize="40dp"
        android:drawableStart="@drawable/resize_mypage"
        android:layout_marginLeft="60dp"
        android:text="마이페이지"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/myLikeList"
        android:fontFamily="@font/font"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:textSize="40dp"
        android:drawableStart="@drawable/resize_matchlist"
        android:layout_marginLeft="60dp"
        android:text="호감 쪽지보내기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/myMsg"
        android:fontFamily="@font/font"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:textSize="40dp"
        android:drawableStart="@drawable/resize_mymsg"
        android:layout_marginLeft="60dp"
        android:text="호감 채팅방 "
       android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/logoutBtn"
        android:fontFamily="@font/font"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:textSize="40dp"
        android:drawableStart="@drawable/resize_logout"
        android:layout_marginLeft="60dp"
        android:text="로그아웃"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            app:lottie_loop="true"
            android:layout_width="350dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:lottie_rawRes="@raw/setting_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_autoPlay="true">
        </com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="사랑은 그저 미친 짓이다"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/font"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-윌리엄 셰익스피어-"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/font"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</LinearLayout>